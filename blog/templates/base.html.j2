<!DOCTYPE html>
<html>
    <head>
        <title>
        {% if title %}
            {{ title }} | {{ config ['BLOG_TITLE'] }}
        {% else %}
            {{ config['BLOG_TITLE'] }}
        {% endif %}
        </title>
        {% block head %}{% endblock %}
    </head>
    <body>
        {% if g.user.is_authenticated %}
            <div style="float: right;">{{ g.user.nickname }} {% if g.user.is_admin %}(Admin){% endif %}
             | 
            <a href="{{ url_for('new_post') }}">New Post</a> | <a href="{{ url_for('logout') }}">Logout</a></div>
        {% endif %}
        {% with messages = get_flashed_messages() %}
            {% if messages %}
                <ul>
                {% for message in messages %}
                    <li>{{ message }}</li>
                {% endfor %}
                </ul>
            {% endif %}
        {% endwith %}
        <span>{{ config['BLOG_TITLE'] }}</span> - <a href="{{ url_for('page') }}">Index</a>
        <hr>
        {% block content %}
        {% endblock %}
    </body>
</html>
