{% extends 'default/base.html.j2' %}

{% block head %}
    <link rel="stylesheet" type="text/css" href="/static/blog-dashboard.css">
{% endblock %}

{% block content %}
    <div class="box">
        {% if posts %}
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th>Published</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                {% for post in posts.items %}
                    <tr>
                        <td><a href="{{ url_for('post', slug=post.slug)}}">{{ post.title }}</a></td>
                        <td>{{ post.author.nickname }}</td>
                        <td>{{ post.category.name }}</td>
                        <td>{{ post.timestamp.strftime('%B %d, %Y %H:%M') }}</td>
                        <td>
                        {% if g.user.is_admin or post.author == g.user %}
                            <a href="{{ url_for('edit_post', id=post.id)}}">Edit</a>
                        {% endif %}
                        {% if g.user.is_admin %}
                            <a href="{{ url_for('delete_post', id=post.id)}}">Delete</a>
                        {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% if posts.has_prev %}
                <a href="{{ url_for('admin_dashboard', id=posts.prev_num )}}">Next Posts</a>
            {% endif %}
            {% if posts.has_next %}
                <a href="{{ url_for('admin_dashboard', id=posts.next_num )}}">Older Posts</a>
            {% endif %}
        {% else %}
            <p>No posts found! <a href="{{ url_for('new_post') }}">Write your first post!</a></p>
        {% endif %}
    </div>
{% endblock %}
{% block sidebar %}
    <div>
        {% if users %}
            <div class="box">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Nickname</th>
                            <th>Administrator</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.nickname }}</td>
                            <td>{{ user.is_admin }}</td>
                            <td>
                            {% if g.user.is_admin %}
                                <a href="{{ url_for('edit_user', id=user.id)}}">Edit</a>
                                {% if not g.user == user %}
                                    <a href="{{ url_for('delete_user', id=user.id)}}">Delete</a>
                                {% endif %}
                            {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
        {% if g.user.is_admin %}
            <a href="{{ url_for('new_user') }}" class="button">New User</a>
        {% endif %}
        <hr>
    </div>
    <div>
        {% if categories %}
            <div class="box">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Image</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.name }}</td>
                            <td><a href="{{ category.image_url }}">Click</a></td>
                            <td>
                            {% if g.user.is_admin %}
                                <a href="{{ url_for('edit_category', id=category.id) }}">Edit</a>
                                <a href="{{ url_for('delete_category', id=category.id)}}">Delete</a>
                            {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
        {% if g.user.is_admin %}
            <a href="{{ url_for('new_category') }}" class="button">New Category</a>
        {% endif %}
    </div>
{% endblock %}
