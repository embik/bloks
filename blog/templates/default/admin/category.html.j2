{% extends 'default/base.html.j2' %}

{% block content %}
    <form action="" method="post" name="category">
        {{ form.hidden_tag() }}
        <div class="box">
            <p>
                {{ form.name(size=20, placeholder='Category Name') }}
                {% for error in form.name.errors %}
                    <span style="color: red;">{{ error }}</span>
                {% endfor %}
            </p>
            <p>{{ form.image_url(size=40, placeholder='Image URL') }}
                {% for error in form.image_url.errors %}
                    <span style="color: red;">{{ error }}</span>
                {% endfor %}
            </p>
        </div>
        <button type="submit">Submit</button>
    </form>
{% endblock %}
