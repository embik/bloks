{% extends 'base.html.j2' %}

{% block content %}
    <h1>{{ post.title }}</h1>
    <span>
        published by <strong>{{ post.author.nickname }}</strong> on <strong>{{ post.timestamp }}</strong>
        {% if post.category %}
            in <strong>{{ post.category.name }}</strong>
        {% endif %}
    </span>
    <div>
        {{ render_markdown(post.content) }}
    </div>
    <hr>
    {% if g.user.is_admin or g.user == post.author %}
        <a href="{{ url_for('edit_post', id=post.id) }}">Edit Post</a> -
    {% endif %}
    <a href="{{ url_for('page') }}">Back to Index</a>
{% endblock %}
