{% extends 'default/base.html.j2' %}

{% block head %}
    <link rel="stylesheet" type="text/css" href="/static/blog-dashboard.css">
{% endblock %}

{% block full_content %}
    <div class="login-flow">
        <div class="login-wrapper">
            <div class="login-container">
                <form action="" method="post" name="login">
                    {{ form.hidden_tag() }}
                    <div class="login-form">
                        {{ form.username(size=20, placeholder="Username") }}
                        {% for error in form.username.errors %}
                            <span style="color: red;">{{ error }}</span>
                        {% endfor %}

                        {{ form.password(size=20, placeholder="Password") }}
                        {% for error in form.password.errors %}
                            <span style="color: red;">{{ error }}</span>
                        {% endfor %}
                    </div>
                    <button type="submit" class="button wide">Sign In</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
